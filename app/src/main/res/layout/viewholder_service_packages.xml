<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="2dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/rvHolder"
        android:layout_width="@dimen/wide_thumbnail_width"
        android:layout_height="@dimen/wide_thumbnail_height"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp">


        <ImageView
            android:id="@+id/ivThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ivThumbnail"
            android:layout_alignEnd="@id/ivThumbnail"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/shadow_bottom"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat"
            android:maxLines="2"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="jkkj"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start|center_vertical"
            android:lineSpacingMultiplier="1.4"
            android:paddingStart="10dp"
            android:text="Contact Us"
            android:textColor="@color/colorMaterialBlack"
            android:textSize="12sp"
            android:typeface="serif" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>